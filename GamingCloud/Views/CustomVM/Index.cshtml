@model IEnumerable<GamingCloud.Models.CustomVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.password)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.password)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AutoID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AutoID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AutoID">Delete</a> |
                @if (item.active)
                {
                    <a asp-action="Status" asp-route-id="@item.AutoID" asp-route-status="false" class="btn btn-danger" >Stop</a>
                }
                else
                {
                    <a asp-action="Status" asp-route-id="@item.AutoID" asp-route-status="true" class="btn btn-success">Start</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
